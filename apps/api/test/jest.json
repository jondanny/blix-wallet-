{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../../../",
  "testEnvironment": "node",
  "testRegex": "spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/apps/api/src/$1",
    "^@test/(.*)$": "<rootDir>/apps/api/test/$1",
    "^@app/database(.*)$": "<rootDir>/libs/database/src",
    "^@app/env(.*)$": "<rootDir>/libs/env/src",
    "^@app/ticket-provider-encryption-key(.*)$": "<rootDir>/libs/ticket-provider-encryption-key/src",
    "^@app/common(.*)$": "<rootDir>/libs/common/src"
  }
}
